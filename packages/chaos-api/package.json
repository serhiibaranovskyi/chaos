{
  "name": "chaos-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "pnpm run dev:docker:up",
    "dev:db:migrate": "prisma migrate dev",
    "dev:docker:down": "docker compose -f ./docker/docker-compose.dev.yml down",
    "dev:docker:up": "docker compose -f ./docker/docker-compose.dev.yml up -d",
    "format": "prettier \"src/**/*.{js,mjs,ts,mts,md,json}\" --write",
    "lint": "eslint \"src/**/*.{js,mjs,ts,mts}\"",
    "test": "./scripts/tests:run.sh",
    "test:db:migrate": "dotenv -e .env.test -- prisma migrate deploy",
    "test:docker:down": "docker compose -f ./docker/docker-compose.test.yml down",
    "test:docker:up": "dotenv -e .env.test -- docker compose -f ./docker/docker-compose.test.yml up -d",
    "test:types": "tsc --noEmit",
    "watch": "tsc --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.8.1",
    "prisma": "^4.8.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@types/node": "^18.11.18",
    "dotenv-cli": "^6.0.0",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
